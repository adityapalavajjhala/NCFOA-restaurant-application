<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ncfoa_restaurant_application">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NCFOArestaurantapplication">
        <activity android:name=".admin.activities.ForgotPassword"></activity>
        <activity
            android:name=".admin.activities.BaseActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".admin.activities.RegisterRestaurant" />
        <activity android:name=".admin.activities.AdminMenuManagementActivity" />
        <activity android:name=".admin.activities.MenuScrollActivity" />
        <activity android:name=".admin.activities.DishAddDataActivity" />
        <activity android:name=".admin.activities.CategoryScrollActivity" />
        <activity android:name=".admin.activities.CategoryAddDataActivity" />
        <activity android:name=".admin.activities.OrderStatus" />
        <activity android:name=".admin.activities.KitchenStaff" />
        <activity android:name=".admin.activities.WaiterStaff" />
        <activity android:name=".admin.activities.Login"/>
    </application>

</manifest>